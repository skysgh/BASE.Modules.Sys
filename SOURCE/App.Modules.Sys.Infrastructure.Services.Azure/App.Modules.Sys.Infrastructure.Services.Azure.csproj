<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFramework>net10.0</TargetFramework>
	  <ImplicitUsings>enable</ImplicitUsings>
	  <Nullable>enable</Nullable>
	  <GenerateDocumentationFile>True</GenerateDocumentationFile>
	  <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	  <Title>$(AssemblyName)</Title>
	  <Copyright>Copyright $(Authors)</Copyright>
	  <PackageReadmeFile>_Packaging/readme.nuget.md</PackageReadmeFile>
	  <!-- NU5039: Package missing readme - suppressed until readme is created -->
	  <NoWarn>$(NoWarn);NU5039</NoWarn>
	  <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
	  <AnalysisLevel>preview-recommended</AnalysisLevel>
	  <EnableNETAnalyzers>True</EnableNETAnalyzers>
	  <Company>MachineBrains, Inc.</Company>
	  <Product>BASE</Product>
	  <!--<BaseOutputPath>..\..\..\..\SOURCE\App.Host\MODULES\</BaseOutputPath>-->
  </PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <WarningLevel>9999</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <WarningLevel>9999</WarningLevel>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Models\Configuration\_TOREVIEW\AzureCognitiveServicesComputerVisionConfigurationSettings.cs" />
    <Compile Remove="Models\Configuration\_TOREVIEW\AzureCommonConfigurationSettings.cs" />
    <Compile Remove="Models\Configuration\_TOREVIEW\AzureDocumentDbConfigurationSettings.cs" />
    <Compile Remove="Models\Configuration\_TOREVIEW\AzureEnvironmentSettings.cs" />
    <Compile Remove="Models\Configuration\_TOREVIEW\AzureKeyVaultConfigurationSettings.cs" />
    <Compile Remove="Models\Configuration\_TOREVIEW\AzureMapsConfigurationSettings.cs" />
    <Compile Remove="Models\Configuration\_TOREVIEW\AzureRedisCacheConfigurationSettings.cs" />
    <Compile Remove="Models\Configuration\_TOREVIEW\AzureStorageAccountDefaultConfigurationSettings.cs" />
    <Compile Remove="Models\Configuration\_TOREVIEW\AzureStorageAccountDiagnosticsConfigurationSettings.cs" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Models\Configuration\_TOREVIEW\" />
    <Folder Include="Services\Configuration\Implementations\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\App.Modules.Sys.Infrastructure\App.Modules.Sys.Infrastructure.csproj" />
    <ProjectReference Include="..\App.Modules.Sys.Substrate.Contracts\App.Modules.Sys.Substrate.csproj" />
    <ProjectReference Include="..\App.Modules.Sys.Substrate\App.Modules.Sys.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="_Packaging\readme.nuget.md">
      <PackagePath>\</PackagePath>
      <Pack>true</Pack>
    </None>
  </ItemGroup>

</Project>
